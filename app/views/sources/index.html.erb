<h1>All Sources (<%= @sources.count%>)</h1>
<% provide(:title, 'All Sources') %>

<table>
  <tr>
    <th>Name</th>
    <th>Database</th>
    <th>Activity</th>
  </tr>

<% @sourcessorted.each do |source| %>
  <tr>
    <td><%= link_to source.name, source %></td>
    <td><%= source.database_activity %></td>
    <td><%= source.activity %></td>
  </tr>
<% end %>
</table>

<br />

