<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @source.name %>
</p>

<%= link_to 'Edit', edit_source_path(@source) %><hr />
<p>
  <b>Reference:</b>
  <%= @source.reference %>
</p>
<p>
  <b>Activity:</b>
  <%= @source.activity %>
</p>

<p>
  <b>Obtained:</b>
  <%= @source.obtained %>
</p>

<b>Album(s):</b></br>
<table>
	<% @albums.each do |each| %>
	<tr>
		<td><%= link_to each.name, album_path(each) %></td>
		<% if each.albumobtained == true%>
			<td><%= image_tag("tick.png") %></td>
		<% else %>
			<td><%= image_tag("cross.png")%></td>
		<% end %>
	</tr>
	<% end %>
</table><hr>
		

<%= link_to "Delete Source?", @source, :method => :delete, :confirm => "You sure?" %>
