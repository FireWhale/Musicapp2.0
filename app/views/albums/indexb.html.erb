<h1>All Albums (By Date)</h1>
<% provide(:title, 'Newest Albums') %>

<%= link_to ("Sort by Name", albums_path)%>

<table>
  <tr>
    <th>Name</th>
    <th>Releasedate</th>
    <th>Genre</th>
    <th>Publisher</th>
    <th>Albumobtained</th>
  </tr>

<% @sortedbydate.each do |each| %>
  <tr>
    <td><%= link_to each.name, each %></td>
    <td><%= each.releasedate %></td>
    <td><%= each.genre %></td>
    <td><%= each.publisher %></td>
    <td><%= each.albumobtained %></td>
  </tr>
<% end %>
</table>

<br />